.sign-in
  display: flex
  flex: 1
  flex-direction: column
  align-items: flex-start

  .form
    display: flex
    flex: 1
    width: 100%
    margin-top: rem(36)
    margin-bottom: rem(36)
    flex-direction: column
    align-items: flex-start

  .field-wrapper
    width: 100%
    margin-bottom: rem(12)

  .submit-wrapper
    width: 100%
    margin-top: rem(24)
    text-align: left

  .error-wrapper
    text-align: left
    color: errorColor

  .footer
    color: fontSecondaryColor

  a
    color: fontSecondaryColor
    font-weight: bold
    text-decoration: none
