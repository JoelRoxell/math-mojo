.register
  display: flex
  flex: 1
  flex-direction: column
  align-items: flex-start

  .form
    display: flex
    flex-direction: column
    margin-top: rem(36)
    margin-bottom: rem(36)
    width: 100%

    .field-wrapper
      width: 100%
      margin-bottom: rem(12)

    .submit-wrapper
      width: 100%
      margin-top: rem(24)
      text-align: left

    .error-wrapper
      text-align: left
      color: errorColor

  .footer
    color: fontSecondaryColor
    text-align: left

  a
    color: fontSecondaryColor
    font-weight: bold
    text-decoration: none
