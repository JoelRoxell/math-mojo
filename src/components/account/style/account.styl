.account
  display: flex
  flex-direction: column
  background: accentColor
  align-self: center
  width: 80%
  padding: rem(36)
  height: 50%
  box-shadow: 0px 0px 10px rgba(0,0,0,.3)

  +lesserThan(desktop)
    height: 100%
    margin-bottom: rem(36)

  .account-header
    display: flex
    flex-direction: column

    .account-welcome-text
      color: fontColor
      font-size: rem(24)
      text-align: left
      margin-bottom: rem(24)
      font-family: fontFamily

    .account-title
      font-size: rem(24)
      text-align: left

      span
        color: fontSecondaryColor

  .account-view
    display: flex
    flex: 1

  .account-footer
    color:fontSecondaryColor

    a
      color: fontSecondaryColor
      font-weight: bold
      text-decoration: none
